                }*@
                    @if (item.IsActive == true)
                    {
                        <label class="switch ">
                            <input type="checkbox" checked onchange="ToggleActiveStatus('@item.SupplierId')" class="success">
                            <span class="slider round"></span>
                        </label>
                    }
                    else
                    {
                        <label class="switch ">
