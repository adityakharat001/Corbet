<body>

    <main>

        @Html.Raw(ViewBag.emailAvailabilityAlert)

        <style>
            .forgotPassword {
                background-color: #f6f9ff;
                height: 75vh;
            }

                .forgotPassword form {
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    height: -webkit-fill-available;
                }

            .card-header {
                color: #012970;
            }

            div.card {
                box-shadow: 0 4px 8px 0 rgb(0 0 0 / 20%), 0 6px 20px 0 rgb(0 0 0 / 19%);
            }

            .forgotPassword .btn {
                margin-top: 8px;
            }
        </style>
        <div class="forgotPassword min-vh-100">
            <form asp-action="ForgotPassword" asp-controller="Customer" method="post" >
                <div class="card text-center" style="width: 450px;">
                    <div class="card-header h5 bg-white">Forgot Your Password</div>
                    <div class="card-body px-5">
                        <p class="card-text py-2">
                            Enter your email address and we'll send you an email with instructions to reset your password.
                        </p>
                        <div class="form-outline">
                            <input class="form-control my-3" asp-for="Email" placeholder="Email Address" id="emailId" />
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Send</button>
                        <div class="col-12 mt-2">
                            <p class="small text-center mb-0">Back To Login <a asp-controller="Customer" asp-action="CustomerLogin">Click Here</a></p>
                        </div>
                    </div>
                </div>
            </form>
        </div>

