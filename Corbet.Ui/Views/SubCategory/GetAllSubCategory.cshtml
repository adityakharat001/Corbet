        function DeleteAlert(idVal) {
            console.log("he");
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    //window.location.assign(`/SubCategory/DeleteSubCategory/${id}`);
                    let URL = "/SubCategory/DeleteSubCategory";
                    $.ajax({
                        url: URL,
                        type: 'GET',
                        dataType: 'json',
                        data: { id: idVal },
                        success: function (d) {
                            console.log(d);
                            window.location.reload();
                        },
                        error: function () {
                            console.error(d);
                            console.error("Error!!!");
                        }
                    });
                }
            })
        }
</script>
