{

    <script>
        Swal.fire(
            'Change Password',
            'Password Changed Successfully!',
            'success'
        )
    </script>
}

@if (TempData["changePasswordFailed"] != null)
{
    <script>
        Swal.fire(
            'Change Password',
            'Failed To Change Password!',
            'error'
        )
    </script>
}
