@model IEnumerable<Corbet.Ui.Models.GetAllCart>

@{
    ViewData["Title"] = "MailOrder";
    Layout = null;
}

@{
    double total = 0;
    double quantityPlusPrice = 0;
}

<p>Price in rupees per kg</p>
<table class="table" border="1" style="border-spacing:0px;">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
            </tr>
            quantityPlusPrice = (item.Quantity * item.Price);
            total += quantityPlusPrice;
        }
    </tbody>
</table>
<p>Total:: @total</p>