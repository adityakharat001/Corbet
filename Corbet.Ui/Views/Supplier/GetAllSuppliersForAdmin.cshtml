                <td>
                    @Html.DisplayFor(modelItem => item.SupplierName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreditLimit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDate)
                </td>
                @if (item.IsPaymentDone)
                {
                    <td>
                        Paid
                    </td>
                }
                else
                {
                    <td>
                        Unpaid
                    </td>
                }

                <td>
                    @*@if (item.IsActive == true)
                {
                <a title="Deactivate Supplier" class="btn btn-sm btn-danger my-1" asp-controller="Supplier" asp-action="ToggleActiveStatus" asp-route-id="@item.SupplierId">Deactivate</a>
                }
