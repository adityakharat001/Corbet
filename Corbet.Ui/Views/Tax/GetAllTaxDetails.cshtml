    function ToggleActiveStatus(idVal) {
        //window.location.assign(`/Tax/ToggleActiveStatus/${id}`);
        let URL = "/Tax/ToggleActiveStatus";
        $.ajax({
            url: URL,
            type: 'GET',
            dataType: 'json',
            data: { id: idVal },
            success: function (d) {
                console.log(d);
                //window.location.reload();
            },
            error: function () {
                console.error(d);
                console.error("Error!!!");
            }
        });
    }

    function DeleteAlert(idVal) {
        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                //window.location.assign(`/Tax/DeleteTaxDetails/${id}`);
                let URL = "/Tax/DeleteTaxDetails";
                $.ajax({
                    url: URL,
                    type: 'GET',
                    dataType: 'json',
                    data: { id: idVal },
                    success: function (d) {
                        console.log(d);
                        window.location.reload();
                    },
                    error: function () {
                        console.error(d);
                        console.error("Error!!!");
                    }
                });
            }
        })
    }
</script>