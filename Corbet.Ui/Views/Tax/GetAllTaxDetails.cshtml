<table class="table" id="myTable">
    <thead>
        <tr>
            <th>
                Sr. No
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MinTax)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxTax)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Percentage)
            </th>
            <th data-orderable="false">
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th data-orderable="false">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @{
                        counter++;
                    }
                    @counter
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MinTax)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaxTax)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Percentage)
                </td>
                <td>
                    @if (item.Status == true)
                    {
                        <label class="switch ">
                            <input type="checkbox" checked onchange="ToggleActiveStatus('@item.TaxDetailsId')" class="success">
                            <span class="slider round"></span>
                        </label>
                    }
                    else
                    {
                        <label class="switch ">
                            <input type="checkbox" onchange="ToggleActiveStatus('@item.TaxDetailsId')" class="success">
                            <span class="slider round"></span>
                        </label>
                    }
                </td>

                <td>
                    <a title="Edit" class="btn btn-sm btn-primary" asp-controller="Tax" asp-action="UpdateTaxDetails" asp-route-id="@item.TaxDetailsId"><i class="ri-edit-box-fill "></i></a>
                    <button title="Delete" class="btn btn-sm btn-danger" onclick="DeleteAlert('@item.TaxDetailsId')"><i class="ri-delete-bin-6-fill "></i></button>
                </td>
            </tr>
        }
    </tbody>
</table>

