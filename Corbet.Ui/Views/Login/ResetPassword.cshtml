</head>
<body>

    <main>
        @Html.Raw(ViewBag.resetPasswordAlert)

        <style>
            .resetPassword {
                background-color: #f6f9ff;
                height: 75vh;
            }

                .resetPassword form {
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    height: -webkit-fill-available;
                }

                .resetPassword .card-header {
                    color: #012970;
                }

                .resetPassword div.card {
                    box-shadow: 0 4px 8px 0 rgb(0 0 0 / 20%), 0 6px 20px 0 rgb(0 0 0 / 19%);
                }

                .resetPassword .btn {
                    margin-top: 8px;
                }
        </style>

        <div class="resetPassword min-vh-100">
            <form asp-action="ResetPassword" method="post">
                <div class="card text-center" style="width: 450px;">
                    <div class="card-header h5 bg-white">Reset Your Password</div>
                    <div class="card-body px-5">
                        <div class="form-outline" hidden>
                            <input class="form-control my-3" asp-for="Email" placeholder="Email Address" readonly />
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>
                        <div class="form-outline">
                            <input class="form-control my-3" asp-for="Password" placeholder="Password" />
                            <span class="text-danger" asp-validation-for="Password"></span>
                        </div>
                        <div class="form-outline">
                            <input class="form-control my-3" asp-for="ConfirmPassword" placeholder="Confirm Password" />
                            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Submit</button>
                        <div class="col-12 mt-2">
                            <p class="small text-center mb-0">Back To Login <a asp-controller="Login" asp-action="Login">Click Here</a></p>
                        </div>
                    </div>
                </div>
            </form>
        </div>

        @section Scripts {
            @{
                await Html.RenderPartialAsync("_ValidationScriptsPartial");
            }
        }

        </main><!-- End #main -->
        <!-- Vendor JS Files -->
        <script src="~/~/assets/vendor/apexcharts/apexcharts.min.js"></script>
        <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="~/assets/vendor/chart.js/chart.min.js"></script>
        <script src="~/assets/vendor/echarts/echarts.min.js"></script>
        <script src="~/assets/vendor/quill/quill.min.js"></script>
        <script src="~/assets/vendor/simple-datatables/simple-datatables.js"></script>
        <script src="~/assets/vendor/tinymce/tinymce.min.js"></script>
        <script src="~/assets/vendor/php-email-form/validate.js"></script>


        <!-- Template Main JS File -->
        <script src="~assets/js/main.js"></script>

    </body>
    </html>






