<main style="margin-top:18vh;">
    <section class="section m-5 profile">
        <div class="row">
            <div class="col-xl-4">

                <div class="card">
                    <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">

                        <img src="~/assets/img/profile.png" alt="Profile" class="rounded-circle">
                        <h2>@Model.customerUpdateDto.FirstName @Model.customerUpdateDto.LastName</h2>
                        <div class="social-links mt-2">
                        </div>
                    </div>
                </div>

            </div>

            <div class="col-xl-8">

                <div class="card">
                    <div class="card-body pt-3">
                        <!-- Bordered Tabs -->
                        <ul class="nav nav-tabs nav-tabs-bordered">

                            <li class="nav-item">
                                <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#profile-overview">Overview</button>
                            </li>

                            <li class="nav-item">
                                <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-edit">Edit Profile</button>
                            </li>

                            <li class="nav-item">
                                <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-change-password">Change Password</button>
                            </li>

                        </ul>
                        <div class="tab-content pt-2">

                            <div class="tab-pane fade show active profile-overview" id="profile-overview">
                                <h5 class="card-title">Profile Details</h5>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label ">Full Name</div>
                                    <div class="col-lg-9 col-md-8">@Model.customerUpdateDto.FirstName @Model.customerUpdateDto.LastName</div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label">Email</div>
                                    <div class="col-lg-9 col-md-8">@Model.customerUpdateDto.Email</div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label">Phone</div>
                                    <div class="col-lg-9 col-md-8">@Model.customerUpdateDto.PhoneNumber</div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label">State</div>
                                    <div class="col-lg-9 col-md-8">@Model.customerUpdateDto.State</div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label">City</div>
                                    <div class="col-lg-9 col-md-8">@Model.customerUpdateDto.City</div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label">Address</div>
                                    <div class="col-lg-9 col-md-8">@Model.customerUpdateDto.Address</div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label">Alternate Address</div>
                                    <div class="col-lg-9 col-md-8">@Model.customerUpdateDto.AlternateAddress</div>
                                </div>
                            </div>

                            <div class="tab-pane fade profile-edit pt-3" id="profile-edit">

                                <!-- Profile Edit Form -->
                                <form asp-action="EditProfile">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                    <div class="row mb-3 form-group">
                                        <label asp-for="@Model.customerUpdateDto.FirstName" class="col-md-4 col-lg-3 col-form-label"></label>
                                        <div class="col-md-8 col-lg-9">
                                            <input asp-for="@Model.customerUpdateDto.FirstName" class="form-control">
                                            <span asp-validation-for="@Model.customerUpdateDto.FirstName" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="row mb-3 form-group">
                                        <label asp-for="@Model.customerUpdateDto.LastName" class="col-md-4 col-lg-3 col-form-label"></label>
                                        <div class="col-md-8 col-lg-9">
                                            <input asp-for="@Model.customerUpdateDto.LastName" class="form-control">
                                            <span asp-validation-for="@Model.customerUpdateDto.LastName" class="text-danger"></span>
                                        </div>
                                    </div>


                                    <div class="row mb-3 form-group">
                                        <label asp-for="@Model.customerUpdateDto.PhoneNumber" class="col-md-4 col-lg-3 col-form-label"></label>
                                        <div class="col-md-8 col-lg-9">
                                            <input asp-for="@Model.customerUpdateDto.PhoneNumber" class="form-control">
                                            <span asp-validation-for="@Model.customerUpdateDto.PhoneNumber" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="row mb-3 form-group">
                                        <label asp-for="@Model.customerUpdateDto.Email" class="col-md-4 col-lg-3 col-form-label"></label>
                                        <div class="col-md-8 col-lg-9">
                                            <input asp-for="@Model.customerUpdateDto.Email" class="form-control">
                                            <span asp-validation-for="@Model.customerUpdateDto.Email" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="row mb-3 form-group">
                                        <label asp-for="@Model.customerUpdateDto.State" class="col-md-4 col-lg-3 col-form-label"></label>
                                        <div class="col-md-8 col-lg-9">
                                            <input asp-for="@Model.customerUpdateDto.State" class="form-control">
                                            <span asp-validation-for="@Model.customerUpdateDto.State" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="row mb-3 form-group">
                                        <label asp-for="@Model.customerUpdateDto.City" class="col-md-4 col-lg-3 col-form-label"></label>
                                        <div class="col-md-8 col-lg-9">
                                            <input asp-for="@Model.customerUpdateDto.City" class="form-control">
                                            <span asp-validation-for="@Model.customerUpdateDto.City" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row mb-3 form-group">
                                        <label asp-for="@Model.customerUpdateDto.Address" class="col-md-4 col-lg-3 col-form-label"></label>
                                        <div class="col-md-8 col-lg-9">
                                            <textarea asp-for="@Model.customerUpdateDto.Address" class="form-control" style="height: 100px"></textarea>
                                            <span asp-validation-for="@Model.customerUpdateDto.Address" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="row mb-3 form-group">
                                        <label asp-for="@Model.customerUpdateDto.AlternateAddress" class="col-md-4 col-lg-3 col-form-label"></label>
                                        <div class="col-md-8 col-lg-9">
                                            <textarea asp-for="@Model.customerUpdateDto.AlternateAddress" class="form-control" style="height: 100px"></textarea>
                                        </div>
                                    </div>
                                    @*
                                    <div class="row mb-3 form-group">
                                    <label asp-for="City" class="col-md-4 col-lg-3 col-form-label"></label>
                                    <div class="col-md-8 col-lg-9">
                                    <input asp-for="City" class="form-control">
                                    <span asp-validation-for="City" class="text-danger"></span>
                                    </div>
                                    </div>
                                    *@

                                    @*
                                    <div class="row mb-3 form-group">
                                    <label for="Country" class="col-md-4 col-lg-3 col-form-label">Country</label>
                                    <div class="col-md-8 col-lg-9">
                                    <input name="country" type="text" class="form-control" id="Country" value="USA">
                                    </div>
                                    </div>

                                    <div class="row mb-3 form-group">
                                    <label for="Address" class="col-md-4 col-lg-3 col-form-label">Address</label>
                                    <div class="col-md-8 col-lg-9">
                                    <input name="address" type="text" class="form-control" id="Address" value="A108 Adam Street, New York, NY 535022">
                                    </div>
                                    </div>*@

                                    <div class="text-center">
                                        <button type="submit" class="btn btn-primary">Save Changes</button>
                                    </div>
                                </form><!-- End Profile Edit Form -->

                            </div>


                            <div class="tab-pane fade pt-3" id="profile-change-password">
                                <!-- Change Password Form -->
                                <form asp-action="ChangePassword">
                                    <div class="row mb-3 form-group">
                                        <label asp-for="changePasswordCommand.OldPassword" class="col-md-4 col-lg-3 col-form-label">Current Password</label>
                                        <div class="col-md-8 col-lg-9">
                                            <input asp-for="changePasswordCommand.OldPassword" type="password" class="form-control">
                                            <span asp-validation-for="changePasswordCommand.OldPassword" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row mb-3 form-group">
                                        <label asp-for="changePasswordCommand.NewPassword" class="col-md-4 col-lg-3 col-form-label">New Password</label>
                                        <div class="col-md-8 col-lg-9">
                                            <input asp-for="changePasswordCommand.NewPassword" type="password" class="form-control">
                                            <span asp-validation-for="changePasswordCommand.NewPassword" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row mb-3 form-group">
                                        <label asp-for="changePasswordCommand.ConfirmPassword" class="col-md-4 col-lg-3 col-form-label">Confirm New Password</label>
                                        <div class="col-md-8 col-lg-9">
                                            <input asp-for="changePasswordCommand.ConfirmPassword" type="password" class="form-control">
                                            <span asp-validation-for="changePasswordCommand.ConfirmPassword" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="text-center">
                                        <button type="submit" class="btn btn-primary">Change Password</button>
                                    </div>
                                </form><!-- End Change Password Form -->

                            </div>

                        </div><!-- End Bordered Tabs -->

                    </div>
                </div>

            </div>
        </div>
    </section>
</main><!-- End #main -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script type="text/javascript"></script>

